ads": -1, "filename": "clitt-1.0.0.tar.gz", "has_sig": false, "md5_digest": "93fb52945b93e7ef9f2291ef25589c9e", "packagetype": "sdist", "python_version": "source", "requires_python": null, "size": 3965, "upload_time": "2019-12-22T14:21:28", "upload_time_iso_8601": "2019-12-22T14:21:28.015780Z", "url": "https://files.pythonhosted.org/packages/1e/69/d4838fac9566f22d07537d03b3c479b57c6e23e567a33b818c53a2b27515/clitt-1.0.0.tar.gz", "yanked": false}], "1.1.3": [{"comment_text": "", "digests": {"md5": "e7413c5b19020513538ca0179bc92bdd", "sha256": "bc6f93a6fa6262d612ba4a301f7e24b0cb1369aaa859aa47bb96a8d0f463072e"}, "downloads": -1, "filename": "clitt-1.1.3-py3-none-any.whl", "has_sig": false, "md5_digest": "e7413c5b19020513538ca0179bc92bdd", "packagetype": "bdist_wheel", "python_version": "py3", "requires_python": ">=3.7,<4.0", "size": 4936, "upload_time": "2019-12-22T15:33:20", "upload_time_iso_8601": "2019-12-22T15:33:20.511194Z", "url": "https://files.pythonhosted.org/packages/31/d7/a18b112f6aa5d2bd338a1cdafa42ec4081e0c6b0b6f9d616a31a5571dc93/clitt-1.1.3-py3-none-any.whl", "yanked": false}, {"comment_text": "", "digests": {"md5": "d2d5c9dc1cf4aa73c41186ff0d7848bc", "sha256": "cc1c278425b07189d88ba4c544e8b38c019d748f61c9096204694e77a1ce44f9"}, "downloads": -1, "filename": "clitt-1.1.3.tar.gz", "has_sig": false, "md5_digest": "d2d5c9dc1cf4aa73c41186ff0d7848bc", "packagetype": "sdist", "python_version": "source", "requires_python": ">=3.7,<4.0", "size": 3678, "upload_time": "2019-12-22T15:33:22", "upload_time_iso_8601": "2019-12-22T15:33:22.001747Z", "url": "https://files.pythonhosted.org/packages/d5/7f/e00a3f79de60077acbf5ea72740e35938685d20fd2a6c56563f070499e3f/clitt-1.1.3.tar.gz", "yanked": false}], "1.1.4": [{"comment_text": "", "digests": {"md5": "3095b4125b3e08beaa3be0b41d402df9", "sha256": "1aa5645d26b0df8f32b0ae3bc7f6d5674cb1284042f7f18bb052cf763e0855a1"}, "downloads": -1, "filename": "clitt-1.1.4-py3-none-any.whl", "has_sig": false, "md5_digest": "3095b4125b3e08be